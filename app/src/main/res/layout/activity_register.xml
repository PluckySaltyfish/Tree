<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg2"
    tools:context="com.example.plucky.mytree.login.Register"
    tools:ignore="ExtraText"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textbackground"
        android:layout_width="307dp"
        android:layout_height="275dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/testview_background"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline14"
        app:layout_constraintVertical_bias="0.0"/>


    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="277dp"
        android:layout_height="41dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/userbackground"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="@+id/textbackground"
        app:layout_constraintTop_toTopOf="@+id/textbackground"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="277dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/userbackground"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="@+id/textbackground"
        app:layout_constraintStart_toStartOf="@+id/textbackground"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        />

    <TextView
        android:id="@+id/text3"
        android:layout_width="277dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/userbackground"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="@+id/textbackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textbackground"
        app:layout_constraintTop_toBottomOf="@+id/text2"/>

    <TextView
        android:id="@+id/text4"
        android:layout_width="277dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/userbackground"
        android:enabled="false"
        app:layout_constraintBottom_toTopOf="@+id/buttonregister"
        app:layout_constraintEnd_toEndOf="@+id/textbackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textbackground"
        app:layout_constraintTop_toBottomOf="@+id/text3"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/users"
        android:layout_width="50dp"
        android:layout_height="17dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:text="用户名"
        android:textColor="@color/hint_word"
        app:layout_constraintBottom_toBottomOf="@+id/text1"
        app:layout_constraintStart_toStartOf="@+id/text1"
        app:layout_constraintTop_toTopOf="@+id/text1"
        tools:ignore="RtlCompat"/>

    <TextView
        android:id="@+id/mail"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:text="邮箱"
        android:textColor="@color/hint_word"
        app:layout_constraintBottom_toBottomOf="@+id/text2"
        app:layout_constraintStart_toStartOf="@+id/text2"
        app:layout_constraintTop_toTopOf="@+id/text2"
        />

    <TextView
        android:id="@+id/psword"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="密码"
        android:textColor="@color/hint_word"
        app:layout_constraintBottom_toBottomOf="@+id/text3"
        app:layout_constraintStart_toStartOf="@+id/text3"
        app:layout_constraintTop_toTopOf="@+id/text3"/>

    <TextView
        android:id="@+id/verifypswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="确认密码"
        android:textColor="@color/hint_word"
        app:layout_constraintBottom_toBottomOf="@+id/text4"
        app:layout_constraintStart_toStartOf="@+id/text4"
        app:layout_constraintTop_toTopOf="@+id/text4"/>

    <EditText
        android:id="@+id/editmail"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:ems="10"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/text2"
        app:layout_constraintEnd_toEndOf="@+id/text2"
        app:layout_constraintStart_toEndOf="@+id/mail"
        app:layout_constraintTop_toTopOf="@+id/text2"/>

    <EditText
        android:id="@+id/edituser"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/text1"
        app:layout_constraintEnd_toEndOf="@+id/text1"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toEndOf="@+id/users"
        app:layout_constraintTop_toTopOf="@+id/text1"
        tools:ignore="RtlCompat"/>

    <EditText
        android:id="@+id/editpsw"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/text3"
        app:layout_constraintEnd_toEndOf="@+id/text3"
        app:layout_constraintStart_toEndOf="@+id/psword"
        app:layout_constraintTop_toTopOf="@+id/text3"/>

    <EditText
        android:id="@+id/verifypd"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/text4"
        app:layout_constraintEnd_toEndOf="@+id/text4"
        app:layout_constraintTop_toTopOf="@+id/text4"/>

    <Button
        android:id="@+id/buttonregister"
        android:layout_width="277dp"
        android:layout_height="41dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/register_button"
        android:text="注册"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textbackground"
        app:layout_constraintEnd_toEndOf="@+id/textbackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textbackground"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13"/>




</android.support.constraint.ConstraintLayout>